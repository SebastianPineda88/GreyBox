<Window x:Class="Car_Inventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-Car_Inventory"
        mc:Ignorable="d"
        Title="Car Inventory" Height="350" Width="350"
        WindowStartupLocation="CenterScreen"
        MinHeight="30" MinWidth="350"
        Background="LightGray" FontFamily="Tahoma" FontSize="12"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Gradient: Navy Blue to White -->
        <LinearGradientBrush x:Key="TitleGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#000080" Offset="0"/>
            <GradientStop Color="#0000CD" Offset="0.5"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>

        <!-- Classic XP Button Style -->
        <Style x:Key="TitleButton" TargetType="Button">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="1,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="#808080"
                                    BorderThickness="1"
                                    CornerRadius="1">
                                <Border x:Name="InnerBorder"
                                        Background="Transparent"
                                        BorderBrush="White"
                                        BorderThickness="1,1,0,0"
                                        Margin="1"/>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0E0FF"/>
                                <Setter TargetName="InnerBorder" Property="Background" Value="#E0F0FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#80C0FF"/>
                                <Setter TargetName="InnerBorder" Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter TargetName="InnerBorder" Property="BorderBrush" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Boxed Button Style (Same as Header) -->
        <Style x:Key="BoxedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=Background}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="OuterBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#808080"
                                BorderThickness="1"
                                CornerRadius="0">
                            <Border BorderBrush="White"
                                    BorderThickness="1,1,0,0"
                                    Margin="1">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterBorder" Property="Background" Value="#C0E0FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="OuterBorder" Property="Background" Value="#80C0FF"/>
                                <Setter TargetName="OuterBorder" Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NEW: Dropdown Button Style (Small Square) -->
        <Style x:Key="DropdownButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="#808080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Path Data="M 2,6 L 8,12 L 14,6 Z" 
                                  Fill="Black" 
                                  Stretch="Fill" 
                                  Width="10" Height="6"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0E0FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#80C0FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

